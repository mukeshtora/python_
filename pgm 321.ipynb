    "\"\"\"\n",
    "pg.no.321\n",
    "23/11/23\n",
    "count the number of words, lines and characters from the text file\n",
    "\"\"\"\n",
    "f=open('sample.txt','r')\n",
    "w=0\n",
    "l=0\n",
    "c=0\n",
    "x=0\n",
    "for i in f:\n",
    "    l+=1\n",
    "    x=i.split()\n",
    "    w+=len(x)\n",
    "    c+=len(i)\n",
    "print(\"no.of words:\",w)\n",
    "print(\"no.of lines:\",l)\n",
    "print(\"no.of characters:\",c)"
   ]
